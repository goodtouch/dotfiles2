# Xft
Xft.antialias: rgba
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.rgba: rgb

# rxvt configuration
URxvt*loginShell:true

URxvt*transparent:true
URxvt*shading:30
URxvt*background:Black
URxvt*foreground:White

URxvt*scrollBar:true
URxvt*scrollBar_right:true
URxvt*scrollBar_floating:false
URxvt*scrollstyle:plain
URxvt*secondaryScroll:true

# how many lines you want it to save per session
URxvt*saveLines:32767
URxvt*troughColor:#000000
URxvt*scrollColor:#222222

! include file should have something like:
!
!   URxvt*boldColors: on
!   URxvt*font: xft:Monaco:pixelsize=17:antialias=true:hinting=true:medium
!   URxvt*boldFont: xft:Monaco:pixelsize=17:antialias=true:hinting=true:bold
!
!   include is relative to $HOME/
#include ".Xresources-fonts"

# with this set to true, when an app sends a bell to the terminal, awesome hilights the appropriate tag(s) ;)
URxvt*urgentOnBell: true

URxvt.perl-lib: .urxvt/
# these three lines enable clicking on links to open them ;)
## if you want to enable tab support, append ,tabbed to the next line
## then use shift+down arrow to create tabs and shift+{left,right} arrows to switch between them
URxvt*perl-ext-common: font,default,matcher,-option-popup,-selection-popup,-realine
URxvt*matcher.button: 1
# don't forget to change this to your favorite browser
URxvt*urlLauncher: chromium
URxvt.keysym.M-plus:      perl:font:increment
URxvt.keysym.M-minus:    perl:font:decrement
