[user]
  name = <%= config['name'] %>
  email = <%= config['email'] %> 
[alias]
  co = checkout
[color]
  diff = auto
  status = auto
  branch = auto
[core]
  excludesfile = <%= ENV['HOME'] %>/.gitignore
  editor = vim
  autocrlf = input
[apply]
  whitespace = nowarn
[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[credential]
  helper = cache
