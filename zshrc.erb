# Look in ~/.oh-my-zsh/templates/zshrc.zsh-template for more options

# Path to your oh-my-zsh installation.
export ZSH=$HOME/.oh-my-zsh

ZSH_THEME="nebirhos"

plugins=(git bundler gem grunt<% if OS.mac? %> brew<% end %> z)

# User configuration

export PATH="<%= ENV['HOME'] %>/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"
export EDITOR='vim'

# rbenv
export PATH="$HOME/.rbenv/bin:$PATH"
if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi

# Custom functions
# FIXME: move this to custom zsh folder and install it only if wanted in Rakefile

# Keeping this at the end is a good idea ;-)
source $ZSH/oh-my-zsh.sh

# Go to ~/code (and complete)
c() { cd ~/code/$1; }
_c() { _files -W ~/code -/; }
compdef _c c

# Go to ~/ (and complete)
h() { cd ~/$1; }
_h() { _files -W ~/ -/; }
compdef _h h
