# Look in ~/.oh-my-zsh/templates/zshrc.zsh-template for more options

# Path to your oh-my-zsh installation.
export ZSH=$HOME/.oh-my-zsh

ZSH_THEME="nebirhos"

plugins=(git bundler gem grunt<% if OS.mac? %> brew<% end %>)

# User configuration

export PATH="<%= ENV['HOME'] %>/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"
export EDITOR='vim'

# rbenv
export PATH="$HOME/.rbenv/bin:$PATH"
if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi

# Keeping this at the end is a good idea ;-)
source $ZSH/oh-my-zsh.sh
